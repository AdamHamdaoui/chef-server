{profiles, [
    {test, [
        {deps, [
            {hoax, ".*",
                {git, "https://github.com/xenolinguist/hoax.git", {tag, "0.9.7"}}},
            {cth_readable,
                {git, "https://github.com/ferd/cth_readable.git", {branch, "master"}}}
                ]}
    ]},
    {dev, [
        {relx, [{dev_mode, true},
                {include_src, true}
               ]}
    ]}
]}.

{ct_opts, [{ct_hooks, [cth_readable_shell]}]}.

{pre_hooks, [
             {clean, "make version_clean"},
             {compile, "make VERSION"}
]}.

{plugins, [{pc, "1.8.0"}]}. % Locked to avoid fallout related to: https://github.com/blt/port_compiler/issues/43

{overrides, [
    {override, jiffy, [
        {plugins, [pc]},
        {provider_hooks, [
            {post, [
                {compile, {pc, compile}},
                {clean, {pc, clean}}
            ]}
        ]}
    ]},
    {override, chef_reindex, [
        {plugins, [pc]},
        {provider_hooks, [
            {post, [
                {compile, {pc, compile}},
                {clean, {pc, clean}}
            ]}
        ]}
    ]},
    %% Note 2017-02-28 ssd: These overrides replicate the erl_opts
    %% used in the upstream rebar.conf with warnings_as_errors removed.
    {override, uuid, [
        {erl_opts, [{platform_define, "^R16", 'ERLANG_OTP_VERSION_16'},
                    {platform_define, "^17.", 'ERLANG_OTP_VERSION_17'},
                    {platform_define, "^18.", 'ERLANG_OTP_VERSION_18'},
                    {platform_define, "^19.", 'ERLANG_OTP_VERSION_19'},
                    strict_validation,
                    warn_bif_clash,
                    warn_export_all,
                    warn_export_vars,
                    warn_exported_vars,
                    warn_obsolete_guard,
                    warn_shadow_vars,
                    warn_unused_import,
                    warn_unused_function,
                    warn_unused_record,
                    warn_unused_vars]}]},
    {override, decouch, [
        {erl_opts, [debug_info,
                    {parse_transform, lager_transform}
                   ]}
    ]}
]}.

{erl_first_files, [
    "src/mover_oc_erchef_parse_transform.erl"
]}.

{erl_opts, [
            debug_info,
            %warnings_as_errors, warnings are from oauth
            {parse_transform,lager_transform},
            {platform_define, "^[0-9]+", namespaced_types},
            {i, "include"},
            {i, "./_checkouts/oc_erchef/include"}
           ]}.

{relx, [
    {release,{mover,{cmd, "cat VERSION"}},[
            mover,
            moser,
            jiffy,
            eredis,
            {darklaunch, load},
            bear,
            folsom,
            chef_authn,
            erlware_commons,
            mini_s3,
            mnesia,
            oauth,
            opscoderl_folsom,
            opscoderl_wm,
            quickrand,
            ssh,
            uuid,
            runtime_tools,
            {decouch, load},
            {chef_db, load},
            {chef_objects, load},
            {depsolver, load},
            {oc_chef_authz, load},
            {oc_chef_wm, load},
            eper,
            observer_cli
            ]},

    {include_erts, false},
    {include_src, false},
    {lib_dirs,["_build/default/lib/oc_erchef/apps"]},
    {extended_start_script,true},
    {overlay_vars,"config/vars.config"},
    {overlay,[
            {mkdir,"log/sasl"},
            {mkdir,"etc/keys"},
            {copy,"scripts", "scripts"},
            {template,"config/sys.config","sys.config"}
            ]}
]}.
